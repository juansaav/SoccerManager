datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               Int               @id @default(autoincrement())
  email            String            @unique
  firstName        String?
  lastName         String?
  password         String
  salt             String
  team             Team?
}

model Team {
  id               Int               @id @default(autoincrement())
  name             String            @unique
  countryCode      String
  budget           Int
  user             User @relation(fields: [userId], references: [id])
  userId           Int

  players          Player[]
}

model Player {
  id               Int               @id @default(autoincrement())
  firstName        String
  lastName         String
  countryCode      String
  type             String
  age              Int
  value            Int

  team             Team @relation(fields: [teamId], references: [id])
  teamId           Int
}


model Configuration {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String
}
